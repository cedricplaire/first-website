{% extends 'blog/layout.html.twig' %}

{% block title %}SoMusic - {{ 'contact'|trans }}{% endblock %}

{% block main %}
    <div class="flex-row">
        <div class="d-flex justify-content-center">
            <div class="col-sm-8 well">
                <form action="{{ path('blog_contact') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-envelope" aria-hidden="true"></i> {{ 'Nouveau message'|trans }}</legend>
                        {{ form_row(contactForm.sujet) }}
                        {{ form_row(contactForm.content) }}
                        {{ form_rest(contactForm) }}
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save" aria-hidden="true"></i>{{ 'Envoyer'|trans }}
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
