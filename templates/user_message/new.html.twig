{% extends 'layout.html.twig' %}

{% block title %}New UserMessage
{% endblock %}

{% block body_id 'user_message_new' %}

{% block main %}
	<h1 class="text-secondary">{{'action.newusermsg'|trans}}</h1>

	{#{{ include('user_message/_form.html.twig') }}#}
	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button class="btn btn-outline-primary">
		<i class="fa fa-save"></i>
		{{ button_label|default('Save')|trans }}
	</button>

	<a class="btn btn-outline-primary mt-2" href="{{ path('user_message_index') }}">
		<i class="fa fa-arrow-circle-left"></i>
		{{'action.backToList'|trans}}
	</a>
	{{ form_end(form) }}

{% endblock %}
