{% extends 'layout.html.twig' %}

{% block title %}
	{{'UserMessage index'|trans}}
{% endblock %}
{% block body_id 'user_message_index' %}

{% block main %}
	<h2 class='text-secondary'>
		<u>{{'label.postedusermsg'|trans}}</u>
	</h2>
	{% for user_message in user_messages %}
		<article class="user-message">
			<h4>{{ user_message.sujet }}</h4>
			<span class="post-metadata">
				<span class="metadata">
					<i class="fa fa-calendar"></i>
					{{ user_message.createdAt|localizeddate('long', 'medium', null, 'UTC') }}</span>
				<span class="metadata">
					<i class="fa fa-user"></i>
					{{ user_message.user.fullName }}</span>
			</span>
			<p clas="usermsg-content">{{ user_message.content }}</p>
			<div class="flex-row">
				<a class="btn btn-outline-primary" href="{{ path('user_message_show', {'id': user_message.id}) }}">{{'action.show'|trans}}</a>
				<a class="btn btn-outline-primary" href="{{ path('user_message_edit', {'id': user_message.id}) }}">{{'action.edit'|trans}}</a>
			</div>
		</article>
	</br>
{% else %}
	<p>{{'label.nomsg'}}</p>
{% endfor %}{% endblock %}
